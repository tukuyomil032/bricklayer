{
  "name": "@tukuyomil032/bricklayer",
  "private": false,
  "version": "1.0.2",
  "description": "Interactive TypeScript CLI project scaffolder",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "bin": {
    "bricklayer": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json && chmod +x dist/index.js",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "dev": "ts-node --esm src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "lint-staged": "lint-staged",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": [
    "cli",
    "scaffold",
    "typescript",
    "generator"
  ],
  "author": "tukuyomil032",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tukuyomil032/bricklayer.git"
  },
  "bugs": {
    "url": "https://github.com/tukuyomil032/bricklayer/issues"
  },
  "homepage": "https://github.com/tukuyomil032/bricklayer#readme",
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "commander": "^11.1.0",
    "consola": "^3.4.2",
    "enquirer": "^2.4.1",
    "inquirer": "^9.2.11",
    "ora": "^8.1.1",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@eslint/json": "^0.14.0",
    "@types/cli-progress": "^3.11.6",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^22.10.5",
    "@types/yargs": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^17.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.53.1"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.27.0"
}
